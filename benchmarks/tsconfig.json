{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "lib": ["es2019", "dom"],
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "..",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true
  },
  "include": [
    "./**/*",
    "../utils/**/*",
    "../types/**/*",
    "../config/**/*"
  ]
}
